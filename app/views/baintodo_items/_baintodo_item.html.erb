<div class="row clearfix">
 <% if baintodo_item.completed? %>
  <div class="complete">
   <%= link_to "Mark as Complete", complete_baintodo_list_baintodo_item_path(@baintodo_list, baintodo_item.id), method: :patch %>
  </div>
  <div class="baintodo_item">
   <p style="opacity: 0.4;"><strike><%= baintodo_item.content %></strike></p>
  </div>
  <div class="trash">
   <%= link_to "Delete", baintodo_list_baintodo_item_path(@baintodo_list, baintodo_item.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
 <% else %>
  <div class="complete">
   <%= link_to "Mark as Complete", complete_baintodo_list_baintodo_item_path(@baintodo_list, baintodo_item.id), method: :patch %>
  </div>
  <div class="baintodo_item">
   <p><%= baintodo_item.content %></p>
  </div>
  <div class="trash">
   <%= link_to "Delete", baintodo_list_baintodo_item_path(@baintodo_list, baintodo_item.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
 <% end %>
</div>